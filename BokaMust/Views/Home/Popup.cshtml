@{
    Layout = null; // Inget layout används för popupen
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Popup</title>
    <style>
        /* Stil för popup-innehållet */
        .popup-content {
            padding: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="popup-content">
        <h2>Välkommen till popupen!</h2>
        <p>Här kan du lägga till innehållet för din popup.</p>
        <button onclick="window.close()">Stäng</button> <!-- En knapp för att stänga popupen -->
    </div>
</body>
</html>

